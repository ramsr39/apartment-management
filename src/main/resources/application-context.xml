<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="  
           http://www.springframework.org/schema/beans 
           classpath:/org/springframework/beans/factory/xml/spring-beans-3.0.xsd
           http://www.springframework.org/schema/tx
           classpath:/org/springframework/transaction/config/spring-tx-3.0.xsd
           http://www.springframework.org/schema/context  
           classpath:/org/springframework/context/config/spring-context-3.0.xsd">

	<context:property-placeholder location="classpath*:*.properties.default" />
	<import resource="dataSource-context.xml" />

	<bean id="logService" class="com.apartment.management.services.LoginService">
		<property name="loginDao" ref="loginDao" />
	</bean>

	<bean id="loginDao" class="com.apartment.management.dao.LoginDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="comunityDetailsService" class="com.apartment.management.services.CommunityDetailsService">
	  <property name="communityDetailsDao" ref="communityDetailsDao"></property>
	</bean>
	
	<bean id="communityDetailsDao" class="com.apartment.management.dao.CommunityDetailsDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
	

</beans>